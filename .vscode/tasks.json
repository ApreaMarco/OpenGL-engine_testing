{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "type": "shell",
            "command": "./app.out",
            "dependsOn": [
                "unix-compile"
            ]
        },
        {
            "label": "unix-compile",
            "type": "shell",
            "command": "bash -c 'make'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "win-compile",
            "type": "shell",
            "command": "bash -c 'make windows'"
        },
        {
            "label": "win-build",
            "type": "shell",
            "command": "bash -c 'make windows_build'"
        },
        {
            "label": "win-build-and-compile",
            "type": "shell",
            "command": "bash -c 'make windows windows_build && echo Done!'"
        }
    ]
}